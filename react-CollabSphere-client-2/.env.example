# Copy this file to .env (same folder as package.json) and edit.

# Backend API base URL (no trailing slash)
# Examples:
#   REACT_APP_API_BASE_URL=http://localhost:8000
#   REACT_APP_API_BASE_URL=https://your-api.domain.com
REACT_APP_API_BASE_URL=http://localhost:8000

# (Dev only) Gemini API key for client-side calls.
# Production: do NOT expose keys in the browser; implement a backend proxy instead.
REACT_APP_GEMINI_API_KEY=

# Optional: override Gemini model (default: gemini-2.0-flash)
REACT_APP_GEMINI_MODEL=gemini-2.0-flash

# Optional: use backend proxy endpoint /api/ai/gemini (recommended)
# Set to true to enable proxy mode by default.
REACT_APP_AI_USE_PROXY=false
